<div>
<nav class="navbar navbar-dark justify-content-between" style="background-color: white;">
  <a class="navbar-brand" href="#">The Fitz</a>

  <div class="link-to-new-cocktail">
  <%= link_to "Create a new cocktail", new_cocktail_path %>
  </div>
</nav>
</div>

<div class="main-container" style="background-image: url('<%= cl_image_path("cocktail-big.jpg")%>')">
  <div class="cocktails-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card bg-dark text-white" style="width: 12rem;">
        <div class="image-card">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, style: 'height:200px;width:100%;', crop: :fill%>
          <% else %>
            <img class="card-img-top" src="..." alt="Card image cap">
          <% end %>
        </div>
        <div class="card-img-overlay">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <%= link_to "", cocktail_path(cocktail), class:"stretched-link"%>
          <div class="trash">
             <%= link_to "", cocktail_path(cocktail), :class => "far fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" }  %>
          </div>
          <div class="edit">
             <%= link_to "", cocktail_path(cocktail), :class => "fas fa-pencil-alt"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
