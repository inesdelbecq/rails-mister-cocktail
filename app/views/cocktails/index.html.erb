<nav class="navbar navbar-dark justify-content-between" style="background-color: white;">
  <a class="navbar-brand" href="#">The Fitz</a>

  <div class="link-to-new-cocktail">
  <%= link_to "Create a new cocktail", new_cocktail_path %>
  </div>
</nav>

<div class="main-container" style="background-image: url('<%= cl_image_path("cocktail-big.jpg")%>')">
  <div class="cocktails-container">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <div class="image-card">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, width:286, height:88, crop: :fill%>
          <% else %>
          <img class="card-img-top" src="..." alt="Card image cap">
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-text"><%= link_to cocktail.name , cocktail_path(cocktail) %></p>
          <p><%= link_to "", cocktail_path(cocktail), :class => "far fa-trash-alt", method: :delete, data: { confirm: "Are you sure?" }  %></p>
        </div>
      </div>
  <% end %>
  </div>
</div>
