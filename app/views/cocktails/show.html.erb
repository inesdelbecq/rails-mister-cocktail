<h1><%= @cocktail.name %></h1>

   <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %>
        <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
    </ul>
<%= link_to 'Add a new dose',  new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to cocktails', cocktails_path %>
