<div class="container">
  <div class="illustration">
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, style: 'height:100%;width:790px;',crop: :fill, class:"img-cocktail"%>
    <% else %>
      <img class="card-img-top" src="..." alt="Card image cap">
    <% end %>
  </div>
  <div class="description">
    <h1><%= @cocktail.name %></h1>

    <h2>Ingredients</h2>
     <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
      </ul>
    <%= link_to 'Add a new ingredient',  new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
